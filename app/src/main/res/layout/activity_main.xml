<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb"
    android:backgroundTintMode="add"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullName"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="143dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:shadowColor="#040303"
        android:text="Log Out"
        android:textColor="@color/colorRed"
        android:textIsSelectable="true"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="0dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorBlack"
        android:textSize="36sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="136dp"
        android:text="Welcome"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="50sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/productsBtn"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_below="@+id/fullName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_bg"
        android:drawableBottom="@drawable/ic_baseline_shopping_cart_24"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:text="Products"
        android:textColor="@color/colorWhite"
        android:textSize="24sp" />

    <Button
        android:id="@+id/favBtn"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_below="@+id/fullName"
        android:layout_marginStart="11dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/productsBtn"
        android:background="@drawable/btn_bg"
        android:drawableBottom="@drawable/ic_baseline_favorite"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:text="Favourites"
        android:textColor="@color/colorWhite"
        android:textSize="24sp" />
</RelativeLayout>